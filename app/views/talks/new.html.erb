<h1>New Talk</h1>

<%= form_for [@note, @talk] do |form| %>
<div class="field">
  <%= form.label :Nombre %>
  <%= form.text_field :author %>
</div>

<div class="field">
  <%= form.label :Contenido %>
  <%= form.text_field :comment %>
</div>

  <div class="actions">
    <%= form.submit %>
  </div>
  <% form.hidden_field :note_id, :value => @note.id %>
<% end %>
